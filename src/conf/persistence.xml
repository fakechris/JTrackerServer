<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="TorrentTrackerPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>com.tracker.entity.Peer</class>
    <class>com.tracker.entity.Torrent</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="toplink.jdbc.user" value="tracker"/>
      <property name="toplink.jdbc.password" value="tracker"/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/TrackerDB"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <!-- <property name="toplink.logging.level" value="FINE"/> -->
      <property name="toplink.logging.level" value="FINE"/>
      <property name="toplink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
